
  <div class="row mt-5">
    <% @articles.each do |article| %>
      <div class="col-3">
        <%=link_to article_path(article) do %>
          <div class="card">
            <img src="https://source.unsplash.com/random" alt="">
            <h3> <%= article.title %></h3>
          </div>
        <% end  %>
      </div>
    <% end %>
  </div>

